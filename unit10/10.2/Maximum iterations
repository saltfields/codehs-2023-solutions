import java.util.*;

public class BinarySearchTest {

    static int count;

    public static void main(String[] args) {
        
        // Use the helper code to generate arrays, calculate the max
        // iterations, and then find the actual iterations for a randomly
        // selected value.
        
        int[] arr1 = generateArrayOfLength(100);
        int[] arr2 = generateArrayOfLength(1000);
        int[] arr3 = generateArrayOfLength(10000);
        int[] arr4 = generateArrayOfLength(100000);
        
        System.out.println("Array Size: " + arr1.length);
        System.out.println("Max iterations: " + binaryMax(arr1.length));
        binaryRec(arr1, 79, 0, arr1.length-1);
        System.out.println("Actual iterations: " + count);
        System.out.println();
        
        System.out.println("Array Size: " + arr2.length);
        System.out.println("Max iterations: " + binaryMax(arr2.length));
        binaryRec(arr2, 79, 0, arr2.length-1);
        System.out.println("Actual iterations: " + count);
        System.out.println();
        
        System.out.println("Array Size: " + arr3.length);
        System.out.println("Max iterations: " + binaryMax(arr3.length));
        binaryRec(arr3, 79, 0, arr3.length-1);
        System.out.println("Actual iterations: " + count);
        System.out.println();
        
        System.out.println("Array Size: " + arr4.length);
        System.out.println("Max iterations: " + binaryMax(arr4.length));
        binaryRec(arr4, 79, 0, arr4.length-1);
        System.out.println("Actual iterations: " + count);
 
    }

    public static int binaryRec(int[] array, int target, int begin, int end) {
        if (begin <= end)
        {
        	int mid = (begin + end) / 2;
            count ++;
        	// Base Case
        	if (target == array[mid]) {
        			return mid;
        	}
    
            if (target < array[mid]) {
                return binaryRec(array, target, begin, mid - 1);
            }
    
            if (target > array[mid]) {
                return binaryRec(array, target, mid + 1, end);
            }
        }
		return -1; //Alternate Base Case - not found
    }

    public static int[] generateArrayOfLength(int length)
    {
        int[] arr = new int[length];
        for(int i = 0; i < length; i++)
        {
            arr[i] = (int)(Math.random() * 100);
        }

        Arrays.sort(arr);

        return arr;
    }

    private static int binaryMax(int length) {
        return (int) (Math.log(length) / Math.log(2)) + 1;
    }
}
