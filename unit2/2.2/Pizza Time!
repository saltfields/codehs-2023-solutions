//PizzaTester.java
public class PizzaTester 
{
    public static void main(String[] args)
    {
        Pizza pizzaOne = new Pizza("Good", "Pepperoni", 12);
        System.out.println(pizzaOne);
        Pizza pizzaTwo = new Pizza("k", ";", 8);
        System.out.println(pizzaTwo);
        Pizza pizzaThree = new Pizza("j", "Pepperoni", 0);
        System.out.println(pizzaThree);
    }
}


//Pizza.java
public class Pizza
{
   private String type;
   private String toppings;
   private int size;
    
    
    
    
    public Pizza(String theType, String theToppings, int theSize)
{
    type = theType;
    toppings = theToppings;
    size = theSize;
}    
    
    
    // You don't need to do anything with this method
    // Used to print the object
    public String toString()
    {
        return size + " inch " + type + " pizza with " + toppings;
    }
}
